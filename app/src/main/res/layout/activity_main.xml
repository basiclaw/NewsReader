<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context=".MainActivity"
				android:background="#40ffcc00">
	<RelativeLayout
		android:id="@+id/layout_nav"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:orientation="horizontal"
		android:weightSum="1"
		android:background="#ffffcc00">
		<SearchView
			android:id="@+id/nav_search"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:background="@drawable/nav_search_bg"
			android:layout_gravity="right"
			android:minWidth="50dp"/>
		<Button
			android:id="@+id/nav_title"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_centerVertical="true"
			android:layout_toStartOf="@+id/nav_bookmarks"
			android:layout_toEndOf="@+id/nav_search"
			android:padding="0dp"
			android:background="#00ffffff"
			android:text="@string/nav_title"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			/>
		<ImageButton
			android:id="@+id/nav_bookmarks"
			android:layout_width="50dp"
			android:layout_height="fill_parent"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:padding="0dp"
			android:layout_margin="0dp"
			android:src="@drawable/bookmarks"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/layout_main"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layout_nav"
		android:layout_alignParentBottom="true"
		android:orientation="vertical">
		<ListView
			android:id="@+id/feed_listview"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"/>

	</RelativeLayout>


</RelativeLayout>
