<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_main"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layout_nav">

        <WebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_nav"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/nav_profile"
            android:id="@+id/nav_profile"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/nav_home" />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/nav_home"
            android:id="@+id/nav_home"
            android:src="#ffff0000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="@string/nav_bookmarks"
            android:id="@+id/nav_bookmarks"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/nav_home" />
    </RelativeLayout>

</RelativeLayout>
